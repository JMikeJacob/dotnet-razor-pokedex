@page
@model Server.Pages_Pokemon.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Type1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Type2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Definition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].PhotoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Genus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Habitat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Generation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokemon[0].Abilities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pokemon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Definition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habitat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Generation)
            </td>
            <td>
                @if(item.Abilities != null) {
                    @foreach (var abl in item.Abilities)
                    {
                        <p>@Html.DisplayFor(modelItem => abl.Name)</p>
                    }
                } else {
                    <p>No Abilities</p>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
