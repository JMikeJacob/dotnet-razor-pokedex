}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pokemon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Type1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Type1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Type2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Type2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Definition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Definition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.PhotoPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.PhotoPath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Genus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Genus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Habitat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Habitat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Generation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Generation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Abilities)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Pokemon.Abilities != null && Model.Pokemon.Abilities.Count > 0) {
                @foreach (var abl in Model.Pokemon.Abilities)
                {
                    <p>@Html.DisplayFor(modelItem => abl.Name) - @Html.DisplayFor(modelItem => abl.Effect)</p>
                }
            } else {
                <p>No Abilities</p>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pokemon.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
